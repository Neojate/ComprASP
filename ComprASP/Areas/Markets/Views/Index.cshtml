<h1>Mercados</h1>
<div class="d-flex justify-content-end mb-4">
    <a class="btn btn-outline-warning" href="create">Crear nuevo</a>    
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Market market in Model)
        {
            <tr>
                <td>@market.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@market.Id" class="btn btn-sm btn-outline-success">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@using ComprASP.Areas.Purchases.ViewModels;
@model AddProductViewModel

<form id="product_form">
    <div class="row">
        <div class="col-12">
            <label asp-for="ProductName">Nombre</label>
            <input asp-for="ProductName" class="form-control" type="text" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <label asp-for="MarketId">Mercado</label>
            <select asp-for="MarketId" asp-items="Model.Markets" class="form-control">
                <option>Selecciona uno</option>                
            </select>
            <span asp-validation-for="MarketId" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <label asp-for="Quantity">Cantidad</label>
            <input asp-for="Quantity" class="form-control" type="number" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
    </div>
    <div class="d-flex justify-content-end mt-4">
        <button aria-label="Close" class="btn btn-outline-dark me-2" data-bs-dismiss="modal" type="button">Cerrar</button>
        <button class="btn btn-warning" onclick="productSubmit()" type="button">Aceptar</button>
    </div>    
</form>